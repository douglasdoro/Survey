<!DOCTYPE html>
<html>
	<head>
	  <title>MiniAppSurvey</title>
	  <%= stylesheet_link_tag :all %>
	  <%= javascript_include_tag :defaults %>
	  <%= csrf_meta_tag %>
	</head>
	<body>
		<ul>
		<% if user_signed_in? %>
		  <li>
		   	<%= current_user.name %> | <%= link_to('sair', destroy_user_session_path, :method => :delete) %>        
		  </li>	
		<% else %>
		  <li>
		  <%= link_to('entrar', new_user_session_path)  %> | <%= link_to "registrar-se", new_user_registration_path  %> 
		  </li>
		<% end %>
		</ul>

		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>

		<%= yield %>

	</body>
</html>
